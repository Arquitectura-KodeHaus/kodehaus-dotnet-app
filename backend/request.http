// ====================================================================
//                       I. LOCALES ENDPOINTS
// ====================================================================

###
# 1.1 GET: Obtener todos los Locales
GET {{baseUrl}}/locales
Accept: application/json

###
# 1.2 POST: Crear un nuevo Local
POST {{baseUrl}}/locales
Content-Type: application/json

{
    "nombre": "Local Test desde REST Client",
    "direccion": "Calle Falsa 123",
    "telefono": "555-1234"
}

###
# 1.3 GET: Obtener un Local por ID
GET {{baseUrl}}/locales/1
Accept: application/json

###
# 1.4 PUT: Actualizar un Local
PUT {{baseUrl}}/locales/1
Content-Type: application/json

{
    "id": 1,
    "nombre": "Local Actualizado",
    "direccion": "Nueva Dirección 456",
    "telefono": "555-5678"
}

###
# 1.5 DELETE: Eliminar un Local
DELETE {{baseUrl}}/locales/999


// ====================================================================
//                      II. INVENTARIOS ENDPOINTS
// ====================================================================

###
# 2.1 GET: Obtener todos los Inventarios
GET {{baseUrl}}/inventarios
Accept: application/json

###
# 2.2 POST: Crear un nuevo Inventario
POST {{baseUrl}}/inventarios
Content-Type: application/json

{
    "idLocal": 1,
    "idProductoCatalogo": 52,
    "precioUnitario": 7.99,
    "stock": 100
}

###
# 2.3 GET: Obtener Inventarios por Local
GET {{baseUrl}}/inventarios/local/1
Accept: application/json


// ====================================================================
//                        III. VENTAS ENDPOINTS
// ====================================================================

###
# 3.1 GET: Obtener todas las Ventas
GET {{baseUrl}}/ventas
Accept: application/json

###
# 3.2 POST: Crear una nueva Venta
POST {{baseUrl}}/ventas
Content-Type: application/json

{
    "idLocal": 1,
    "ventaInventarios": [
        { "idInventario": 1, "cantidad": 2 }
    ]
}

###
# 3.3 GET: Obtener Ventas por Local
GET {{baseUrl}}/ventas/local/1
Accept: application/json


// ====================================================================
//                        IV. EMPLEADOS ENDPOINTS
// ====================================================================

###
# 4.1 GET: Obtener todos los Empleados
GET {{baseUrl}}/empleados
Accept: application/json

###
# 4.2 POST: Crear un nuevo Empleado
POST {{baseUrl}}/empleados
Content-Type: application/json

{
    "nombre": "Juan Pérez",
    "cargo": "Vendedor",
    "localId": 1
}

###
# 4.3 GET: Obtener Empleados por Local
GET {{baseUrl}}/empleados/local/1
